<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crossword Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
    }

    h1 {
      margin-top: 20px;
      color: #333;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(5, 40px);
      grid-gap: 5px;
      justify-content: center;
      margin: 20px auto;
    }

    .grid input {
      width: 40px;
      height: 40px;
      text-align: center;
      font-size: 18px;
      border: 1px solid #ddd;
      background-color: #fff;
    }

    .grid input[disabled] {
      background-color: #ccc;
      border: 1px solid #bbb;
    }

    .clues {
      max-width: 400px;
      margin: 20px auto;
      text-align: left;
    }

    .clues h3 {
      color: #444;
    }

    .clues p {
      margin: 5px 0;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      color: #fff;
      background-color: #28a745;
      border: none;
      cursor: pointer;
      border-radius: 5px;
    }

    button:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <h1>Crossword Puzzle</h1>
  <div class="grid">
    <!-- Row 1 -->
    <input type="text" maxlength="1" id="cell-1-1">
    <input type="text" maxlength="1" id="cell-1-2">
    <input type="text" maxlength="1" id="cell-1-3">
    <input type="text" maxlength="1" id="cell-1-4" disabled>
    <input type="text" maxlength="1" id="cell-1-5">

    <!-- Row 2 -->
    <input type="text" maxlength="1" id="cell-2-1">
    <input type="text" maxlength="1" id="cell-2-2">
    <input type="text" maxlength="1" id="cell-2-3" disabled>
    <input type="text" maxlength="1" id="cell-2-4">
    <input type="text" maxlength="1" id="cell-2-5">

    <!-- Row 3 -->
    <input type="text" maxlength="1" id="cell-3-1" disabled>
    <input type="text" maxlength="1" id="cell-3-2">
    <input type="text" maxlength="1" id="cell-3-3">
    <input type="text" maxlength="1" id="cell-3-4">
    <input type="text" maxlength="1" id="cell-3-5">

    <!-- Row 4 -->
    <input type="text" maxlength="1" id="cell-4-1">
    <input type="text" maxlength="1" id="cell-4-2" disabled>
    <input type="text" maxlength="1" id="cell-4-3">
    <input type="text" maxlength="1" id="cell-4-4">
    <input type="text" maxlength="1" id="cell-4-5">

    <!-- Row 5 -->
    <input type="text" maxlength="1" id="cell-5-1">
    <input type="text" maxlength="1" id="cell-5-2">
    <input type="text" maxlength="1" id="cell-5-3">
    <input type="text" maxlength="1" id="cell-5-4">
    <input type="text" maxlength="1" id="cell-5-5">
  </div>

  <div class="clues">
    <h3>Clues</h3>
    <p><strong>Across:</strong></p>
    <p>1. A color (5 letters)</p>
    <p>3. Opposite of down (4 letters)</p>

    <p><strong>Down:</strong></p>
    <p>1. Not out (2 letters)</p>
    <p>2. A pronoun (3 letters)</p>
  </div>

  <button onclick="checkAnswers()">Check Answers</button>

  <script>
    function checkAnswers() {
      const correctAnswers = {
        'cell-1-1': 'R',
        'cell-1-2': 'E',
        'cell-1-3': 'D',
        'cell-1-5': 'S',
        'cell-2-4': 'U',
        'cell-3-3': 'I',
        'cell-3-4': 'P',
        'cell-3-5': 'S',
        'cell-4-3': 'T',
        'cell-5-5': 'E',
      };

      let isCorrect = true;

      for (const cellId in correctAnswers) {
        const input = document.getElementById(cellId);
        if (input && input.value.toUpperCase() !== correctAnswers[cellId]) {
          isCorrect = false;
          input.style.backgroundColor = 'pink';
        } else {
          input.style.backgroundColor = 'lightgreen';
        }
      }

      if (isCorrect) {
        alert('Congratulations! You solved the puzzle!');
      } else {
        alert('Some answers are incorrect. Keep trying!');
      }
    }
  </script>
</body>
</html>
